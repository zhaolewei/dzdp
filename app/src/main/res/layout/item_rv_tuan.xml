<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding="3dp"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_tuan_iv"
        android:layout_width="100dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/test_tuan_img1"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_tuan_tv_title"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="国际贸易中心大酒店：国际贸易中心大酒店："
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_tuan_tv_sorttitle"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_below="@id/item_tuan_tv_title"
            android:textSize="14sp"
            android:text="国际贸易中心大国际贸易中心大国际贸易中心大国际贸易中心大国际贸易中心大酒店：国际贸易中心大酒店："
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_tuan_tv_price"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:layout_below="@id/item_tuan_tv_sorttitle"
            android:textSize="16sp"
            android:textColor="#ff4400"
            android:text="￥22.00"
            android:layout_margin="4dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_tuan_tv_value"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/item_tuan_tv_sorttitle"
            android:layout_toRightOf="@id/item_tuan_tv_price"
            android:textSize="13sp"
            android:text="￥28.00"
            android:background="@drawable/delete_line"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>